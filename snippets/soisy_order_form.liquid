    <style>
        #customer_info_form {
            font-size: 14px;
        }

        .modal-content {
            padding: 40px 40px;
            background-color: #fefefe;
            border: 1px solid #888;
            width: 80%;
            box-shadow: 0 0 50px 10px #777;
            border-radius: 5px;
            position: relative;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        @media only screen and (max-width: 500px) {
            .modal-content {
                padding: 20px 20px;
                top: 65%;
            }

            .close_modal {
                right: 20px;
            }
        }

        #customer_info_form input.customer_info_field {
            outline: none;
            border: none;
            border-bottom: 1px solid lightgrey;
            margin-bottom: 12px;
            border-radius: 5px;
            transition: none;
        }

        #customer_info_form ::placeholder {
            color: lightgrey !important;
        } 

        .close_modal {
            padding-bottom: 20px;
            color: lightgrey;
            cursor: pointer;
            position: absolute;
            top: 0px;
            font-size: 35px;
            right: 13px;
        }
        
        .close_modal:hover {
            color: black;
        }

        #address_province_new {
            margin-bottom: 12px;
        }

        #customer_info_form select {
            border-radius: 6px;
        }
        
        #customer_info_form label {
            margin-top: 0px;
        }

        #customer_info_confirm_btn {
            margin-top: 30px;
            position: relative;
            left: 50%;
            transform: translateX(-50%);
            width: 100%;
            background: #0b9d8a;
            border: 1px solid #0b9d8a;
            border-radius: 5px;
            color: white;
            height: 50px;
            text-align: center;
            font-size: 20px;
            line-height: 32px;
            cursor: pointer;
            user-select: none;
        }

        #customer_info_confirm_btn:hover {
            opacity: 0.8;
        }
    </style> 

    <div id="customer_info_form" class="modal" style="display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgb(0,0,0); background-color: rgba(0,0,0,0.4);">
        <div class="modal-content">
            <h2 style="text-align: left; margin-bottom: 17px;">Indirizzo di spedizione</h2>
            <span class="close_modal">x</span>
            <input type="text" class="customer_info_field" placeholder="Nome (Obbligatorio)" required>
            <input type="text" class="customer_info_field" placeholder="Cognome (Obbligatorio)">
            <input type="text" class="customer_info_field" placeholder="Indirizzo email (Obbligatorio)">
            <input type="text" class="customer_info_field" placeholder="Numero di telefono (Obbligatorio)">
            <label>Indirizzo</label>
            <input type="text" class="customer_info_field" placeholder="Azienda" style="display: none;">
            <input type="text" class="customer_info_field" placeholder="Indirizzo e numero civico  (Obbligatorio)">
            <input type="text" class="customer_info_field" placeholder="Interno, scala, ecc.  (Obbligatorio)">
            <input type="text" class="customer_info_field" placeholder="CAP  (Obbligatorio)">
            <input type="text" class="customer_info_field" placeholder="Città  (Obbligatorio)">
            <label for="address_province_new">Provincia</label>
            <select id="address_province_new" class="address_form" name="contact[province]" data-default="{{form.province}}"></select>
            <label for="address_country_new">Paese/Regione</label>
            <select id="address_country_new" name="contact[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
            <h1 style="text-align: left; margin-top: 15px; margin-bottom: 0;">Modalità di spedizione</h1>
            <form style="display: flex;
                flex-direction: row;
                align-content: center;
                align-items: center;">
                <input type="checkbox" id="shipping_option" name="shipping_option" checked>
                <label for="shipping_option" style="margin-top: 7px; margin-left: 10px;">Consegna Gratuita 24/48h</label>
            </form>
            <span class="button" id="customer_info_confirm_btn">Confermare</span>
        </div>
    </div>

    <script>
    // Initialize observers on address selectors
    new Shopify.CountryProvinceSelector('address_country_new', 'address_province_new', {
        hideElement: 'address_province_container_new'
    });
    </script>